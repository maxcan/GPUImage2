config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

alias margin 10
alias margin2 (2*${margin})
alias margin3 (3*${margin})
alias margin15 (1.5*${margin})
alias margin05 (0.5*${margin})

alias marOriginX (screenOriginX+${margin})
alias marOriginY (screenOriginY+${margin})

alias narrowX (screenSizeX/3)
alias narrowerX (screenSizeX/4)
alias wideX (2*(screenSizeX/3))
alias widerX (3*(screenSizeX/4))

alias narrowY (screenSizeY/3)
alias widerY (3*(screenSizeY/4))

alias full          move screenOriginX;screenOriginY                                          screenSizeX;screenSizeY
alias lefthalf      move ${marOriginX};${marOriginY}                      (screenSizeX/2)-${margin15};screenSizeY-${margin2}
alias leftthird     move ${marOriginX};${marOriginY}                      ${narrowX}-${margin2};screenSizeY-${margin2}
alias righthalf     move ${marOriginX}+screenSizeX/2-${margin05};${marOriginY}        (screenSizeX/2)-${margin15};screenSizeY-${margin2}
alias rightthird    move ${marOriginX}+${wideX};${marOriginY}             ${narrowX}-${margin2};screenSizeY-${margin2}
alias middlethird   move screenOriginX+${narrowX};${marOriginY}           ${narrowX};screenSizeY-${margin2}
alias tophalf       move ${marOriginX};${marOriginY} screenSizeX;screenSizeY/2
alias bottomhalf    move ${marOriginX};${marOriginY}+(screenSizeY/2)-${margin} screenSizeX-${margin2};(screenSizeY/2)-${margin}
alias topleft       corner top-left resize:screenSizeX/2;screenSizeY/2
alias topright      corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottomleft    corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomright   corner bottom-right resize:screenSizeX/2;screenSizeY/2


alias lefttopqtr    move ${marOriginX};${marOriginY}                      (screenSizeX/2)-${margin15};(screenSizeY/2)-${margin2}
alias righttopqtr    move ${marOriginX}+screenSizeX/2-${margin05};${marOriginY}        (screenSizeX/2)-${margin15};(screenSizeY/2)-${margin2}

alias leftmost    move ${marOriginX};${marOriginY}                        ${widerX}-${margin15};screenSizeY-${margin2}
alias rightmost   move ${marOriginX}+${narrowerX}-${margin05};${marOriginY} ${widerX}-${margin15};screenSizeY-${margin2}

bind up:alt;ctrl ${full}
bind down:alt;ctrl ${bottomhalf}
bind left:shift;alt;ctrl ${lefttopqtr}
bind right:shift;alt;ctrl ${righttopqtr}

bind left:alt;ctrl ${lefthalf}
bind right:alt;ctrl ${righthalf}

bind up:cmd;alt;ctrl ${tophalf}
bind left:cmd;ctrl ${leftthird}
bind right:cmd;ctrl ${rightthird}
bind left:cmd;alt;ctrl ${leftmost}
bind right:cmd;alt;ctrl ${rightmost}
bind down:cmd;alt;ctrl ${middlethird}

# bind tab:cmd switch

bind 1:ctrl;alt throw 0 resize
bind 2:ctrl;alt throw 1 resize
bind 3:ctrl;alt throw 2 resize

bind i:ctrl;alt focus 'iTerm'
bind g:ctrl;alt focus 'Google Chrome'
bind s:ctrl;alt focus 'Safari'
bind h:ctrl;alt focus 'HipChat'
bind a:ctrl;alt focus 'Activity Monitor'
bind f:ctrl;alt focus 'Firefox'

bind esc:alt relaunch

config defaultToCurrentScreen true
# Shows app icons and background apps, spreads icons in the same place.
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
bind z:alt hint ASDFGHJKLQWERTYUIOPCVBN # use whatever keys you want

bind x:alt      grid  padding:${margin} 0:6,2 1:6,2

bind up:shift,ctrl   nudge +0 -${margin}
bind down:shift,ctrl   nudge +0 +${margin}
bind left:shift,ctrl   nudge -${margin} +0
bind right:shift,ctrl   nudge +${margin} +0
